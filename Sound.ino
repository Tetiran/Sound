// sizeof gives the number of bytes, each int value is composed of two bytes (16 bits)
// there are two values per note (pitch and duration), so for each note there are four bytes
int notes = sizeof(melody) / sizeof(melody[0]) / 2;

// this calculates the duration of a whole note in ms
int wholenote = (60000 * 4) / tempo;

int divider = 0, noteDuration = 0;

float ArcLength = 1.0;
float begin = 0.0;

#define RED_PIN 25
#define GREEN_PIN 23
#define BLUE_PIN 26

const int RedChannel = 1;
const int GreenChannel = 2;
const int BlueChannel = 3;

const int resolution = 8;
const int freq = 250;

void setup() {
  delay(2000);
  Serial.begin(115200);
  Serial1.begin(115200,SERIAL_8N1, 9, 10);
  Serial2.begin(115200, SERIAL_8N1, 16, 17);

  
  SoundMSerial.set(SoundMAngle.angle_Kp_, 2.5f);  //P gain
  SoundMSerial.set(SoundMAngle.angle_Ki_, 2.0f);  //I gain
  SoundMSerial.set(SoundMAngle.angle_Kd_, 0.01f); //D Gain


  MagnetMSerial.set(MagnetMAngle.obs_angular_displacement_,0.0f); // Set current location to zero
  MagnetMSerial.set(MagnetMAngle.trajectory_queue_mode_,(int8_t)0); // Set trajectory mode to append mode

  MagnetMSerial.get(MagnetMAngle.obs_angular_displacement_, begin);
  Serial.print("beginning angle");
  Serial.println(begin);


  ledcSetup(RedChannel, freq, resolution);
  ledcSetup(GreenChannel, freq, resolution);
  ledcSetup(BlueChannel, freq, resolution);

  ledcAttachPin(RED_PIN, RedChannel);
  ledcAttachPin(GREEN_PIN, GreenChannel);
  ledcAttachPin(BLUE_PIN, BlueChannel);

  ledcWrite(RedChannel, 125);
  ledcWrite(GreenChannel, 125);
  ledcWrite(BlueChannel, 125);

}

float temp =0.0;
void loop() {
  // iterate over the notes of the melody.
  // Remember, the array is twice the number of notes (notes + durations)
  for (int thisNote = 0; thisNote < notes * 2; thisNote = thisNote + 2) {

    if (Serial.available()){

      char c = Serial.read();
      if (c == 'a'){

        ArcLength = Serial.parseFloat();
        Serial.println(ArcLength);

      }
    }

    // calculates the duration of each note
    divider = melody[thisNote + 1];
    if (divider > 0) {
      // regular note, just proceed
      noteDuration = (wholenote) / divider;
    } else if (divider < 0) {
      // dotted notes are represented with negative durations!!
      noteDuration = (wholenote) / abs(divider);
      noteDuration *= 1.5; // increases the duration in half for dotted notes
    }

    // we only play the note for 90% of the duration, leaving 10% as a pause
    SoundMSerial.set(SoundMAngle.ctrl_velocity_, (float) melody[thisNote] * scale * 6.28f);  // Set to slow speed for 1

    float target = state ? - ArcLength / 2 + begin : ArcLength/2 + begin;
    state = !state;
    ledcWrite(RedChannel, random(0, 256));
    ledcWrite(GreenChannel, random(0, 256));
    ledcWrite(BlueChannel, random(0, 256));

    MagnetMSerial.set(MagnetMAngle.trajectory_angular_displacement_, target);

    MagnetMSerial.set(MagnetMAngle.trajectory_duration_, (float) noteDuration/1000);
    // Wait for the specief duration before playing the next note.
    delay(noteDuration);
  }
  
}
